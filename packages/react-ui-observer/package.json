    {
      "path": "dist/react-ui-observer.esm.js",
      "limit": "10 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
